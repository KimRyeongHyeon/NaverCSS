<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner_css_lang"
        android:layout_width="161dp"
        android:layout_height="23dp"
        android:entries="@array/css_lang_spinner"
        app:layout_constraintBottom_toTopOf="@+id/text_input_css"
        app:layout_constraintEnd_toEndOf="@+id/text_input_css"
        app:layout_constraintTop_toTopOf="parent"></Spinner>

    <Button
        android:id="@+id/btn_css"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="음성 듣기"
        app:layout_constraintEnd_toEndOf="@+id/text_input_css"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/text_input_css"
        app:layout_constraintTop_toBottomOf="@+id/text_input_css" />

    <EditText
        android:id="@+id/text_input_css"
        android:layout_width="313dp"
        android:layout_height="261dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="네이버 클라우드 플랫폼에서는 Clova, papago 등 네이버의 다양한 인공지능 서비스를 API 형태로 제공합니다."
        app:layout_constraintBottom_toTopOf="@+id/btn_css"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>